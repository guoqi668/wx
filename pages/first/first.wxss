/* pages/first.wxss */
.header-active {
    background-color: #fefefe;
    border-bottom: 1px solid #eee;
    color: #fff;
}
.header-active .placeholder {
    color: #ccc;
}
.header-active .header-input {
    border: 1px solid #ccc;
}
.header-inactive {
    background-color: #333;
    color: rgba(255,255,255,0.6);    
}
.header {
    height: 100rpx;
    font-size: 28rpx; 
    position: fixed;
    z-index: 10;
} 
.header-left,.header-right {
    width: 100rpx;
    text-align: center;
}
.header-input {
    /* height: 60rpx; */
    box-sizing: border-box;
    padding: 7rpx 20rpx 7rpx;
    border-radius: 35rpx;
    border: 1px solid rgba(255,255,255,0.6);
}
.placeholder {
    color: rgba(255,255,255,0.6);
}

