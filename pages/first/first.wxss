/* 显示更多 */

.showMore-container {
    overflow: hidden;
    height: 40rpx;
    padding: 15rpx 0;
}
.showMoreFull {
    height: 100%;
}
.showMore {
    padding: 0 15rpx;
    box-sizing: border-box;
}
.showMore-left {
    border: 1px solid orange;
    padding: 0 5rpx;
    font-size: 26rpx;
    border-radius: 10rpx;
    color: orange;
}
.showMore-desc {
    line-height: 2.5;
}
.showMore-right {
    vertical-align: top;
    width: 200rpx;
    text-align: right;   
}
/* 侧边栏 */
.sidebar {
    /* margin-top:100px; */
    /* display: inline-block; */
    position: fixed;
    top: 100rpx;
    color: #333;
    width: 200rpx;
    bottom: 0;
    text-align: center;
    background-color: #eee;
    border-right: 1px solid #eee;
}
.sidebar-right {
    position:absolute;
    left:200rpx;
    top:100rpx;
    bottom:0;
    padding:0;
}
.sidebar-item {
    line-height: 100rpx;
    width: 200rpx;
    border-bottom: 1px solid #eee;
    
}
.sidebar-item.active {
    color: orange;
    background-color: #fff;
}